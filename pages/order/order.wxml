<view class='header_'>
  <view class='slider_'>
      <view class='span_33' catchtap='opentap' data-icon="1" style='color:{{cur_color1}}'>正在使用</view>
      <view class='span_33' catchtap='opentap' data-icon="2" style='color:{{cur_color2}}'>待取车</view>
      <view class='span_33' catchtap='opentap' data-icon="3" style='color:{{cur_color3}}'>已还车</view>
  </view>
  <view class='line_' style='transform:translateX({{xline}})'></view>
</view>
<view class='contain'>
<scroll-view bindscrolltolower="bindDownLoad" scroll-y="true" scroll-with-animation="true" style="height:{{scrollHeight}};">
  <view class='scroll_view' wx:for="{{order_list}}" wx:key="index">
    <view class='orderid'>订单号：{{item.order_sn}}</view>
    <view>创建时间：{{item.addtime}}</view>
    <view class='bord'></view>
    <view class='auth'>姓名：{{item.realname}}</view><view  class='auth'>电话：{{item.mobile}}</view>
    <view><text style='color:#626262'>驾驶证： {{item.driver_license_number}}</text></view>
    <view><text style='color:#626262;font-family:宋体;'>租赁时间：{{item.start_time}} 至 {{item.end_time}}</text></view>
    <view class='status'>状态：<text style='color:red'>{{item.order_status_name}}</text></view>
    <view style='color:#626262'>订单总价：<text style=''>¥{{item.total_amount}}</text></view>
    <view style='margin-bottom:2vh;'>实付款：<text style='color:red'>¥{{item.pay_amount}}</text><icon class='fa fa-hand-o-left' style='float:right;margin-right:3vw'></icon></view>
    <view class='line'></view>
  </view>
</scroll-view>
</view>
<view class='bor' style='height:{{animate_}}vh;'></view>

