.header_{width: 100%;height: 6vh;border-botto:1rpx solid #B4BCCC;box-shadow:0 0 5px #B4BCCC;position: fixed;top: 0;background-color: white;z-index: 999999;}
.span_33{display: inline-block;float: left;width:30%;text-align: center;font-family: '宋体';font-size: 30rpx;line-height: 6vh;}
.content_{width: 100%;margin-top: 1vh;overflow-y: scroll;-webkit-overflow-scrolling: touch;height: 100%;}
.content_1{width: 100%;height: 20vh;border-bottom:1rpx solid #B4BCCC;display: block;font-family: '宋体';font-size: 30rpx;}
.content_1_2,.content_1_4,.content_1_3{width: 98%;padding-left: 2%;line-height: 5vh;color: #878D99;}
.content_2{width: 100%;height: 10vh;border-bottom:1rpx solid #B4BCCC;display: block;line-height: 7vh;font-family: '宋体';font-size: 30rpx;}
.tx1,.tx2{display: inline-block;width: 46%;text-align: left;font-family: '宋体';font-size: 36rpx;font-weight: normal;padding-left: 2%;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;}
.tx2{text-align: right;color:#FA5555;padding-right: 2%;}
.content_2_1,.content_2_2{display: inline-block;width: 46%;clear: both;line-height: 7vh;margin-top: 1.5vh;padding-left: 2%;}
.content_2_2{vertical-align: top;padding-right: 2%;}
.con_btn{display: inline-block;float: right;width: 20vw;height: 5vh;margin-top: 1.5vh;font-family: '宋体';font-size: 20rpx;margin-right: 1.5vw;line-height: 5vh;background-color: #409EFF;color: white;}
.btn_default{background-color: white;color: black}
.btn_hover1{background-color: #4083FF;}
.btn_hover2{background-color:#D8DCE5 ;}