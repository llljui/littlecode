
.container{
  width: 100%;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}
.header{
  display: block;
  width: 100%;
  height: 180rpx;
  box-shadow: 0 0 5px #C0C4CC;
  border-bottom: 1px solid #C0C4CC;
}
.header>text{color: #444;font-size:26rpx;font-family: '宋体';text-indent: 1em;display: block;line-height:52rpx;}
.header>text:first-child{font-size:32rpx;text-indent: 1em;font-weight: bold;}
.header>text:last-child{line-height:42rpx;}
.content{width:100%;height:400rpx;margin-bottom: 8vh;text-indent: 1em;font-family: '宋体';font-size: 32rpx;}
.content view{height:80rpx;border-bottom:1px solid #C0C4CC;line-height: 80rpx;}
.footer{position: fixed;bottom: 0;width: 100%;height: 8vh;}
.footer view{display: inline-block;height:8vh;}
.footer view:first-child{width:60%;text-align: left;text-indent: 1em;color: #E6A23C}
.footer view:last-child{width:40%;text-align: center;background: orange;color: white;line-height: 8vh;}